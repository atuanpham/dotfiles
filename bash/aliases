# alias vim='nvim'

alias ag='ag --hidden --path-to-agignore=~/.agignore'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

if [ "$OSTYPE" != linux-gnu ]; then
    alias ls=gls
fi

alias ll='ls -lh --color=auto --group-directories-first'
alias la='ls -lha --color=auto --group-directories-first'

alias tarc='tar -zcvf file.tar.gz'
alias tarx='tar -zxvf'

alias docker='podman'
